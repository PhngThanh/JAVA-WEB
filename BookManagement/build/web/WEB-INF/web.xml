<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>filter.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>servlet.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateController</servlet-name>
        <servlet-class>servlet.UpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewBookController</servlet-name>
        <servlet-class>servlet.AddNewBookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadUserController</servlet-name>
        <servlet-class>servlet.LoadUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDiscountController</servlet-name>
        <servlet-class>servlet.AddDiscountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmController</servlet-name>
        <servlet-class>servlet.ConfirmController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatDiscountController</servlet-name>
        <servlet-class>servlet.CreatDiscountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateController</servlet-name>
        <url-pattern>/UpdateController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewBookController</servlet-name>
        <url-pattern>/AddNewBookController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadUserController</servlet-name>
        <url-pattern>/LoadUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDiscountController</servlet-name>
        <url-pattern>/AddDiscountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmController</servlet-name>
        <url-pattern>/ConfirmController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatDiscountController</servlet-name>
        <url-pattern>/CreatDiscountController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>Spy007</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
